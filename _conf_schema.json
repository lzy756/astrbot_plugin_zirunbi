{
  "initial_price": {
    "description": "初始价格",
    "type": "float",
    "default": 100.0
  },
  "volatility": {
    "description": "波动率 (0.01 - 0.5)",
    "type": "float",
    "default": 0.02
  },
  "update_interval": {
    "description": "市场更新间隔(秒), 即K线周期",
    "type": "int",
    "default": 180
  },
  "admin_ids": {
    "description": "管理员ID列表",
    "type": "list",
    "items": {
      "type": "string"
    },
    "default": []
  },
  "font_path": {
    "description": "中文字体文件路径 (可选, 用于修复绘图中文乱码)",
    "type": "string",
    "default": "fonts/SourceHanSansSC-Regular.otf"
  },
  "web_port": {
    "description": "Web服务端口",
    "type": "int",
    "default": 8000
  },
  "web_public_url": {
    "description": "Web端公开访问地址 (例如 http://example.com:8000), 留空则显示默认提示",
    "type": "string",
    "default": ""
  },
  "rank_trigger_regex": {
    "description": "排行榜触发正则 (会先对消息做.strip()再用re.match从消息开头匹配; 默认^.*...*$实现包含匹配效果)",
    "type": "string",
    "default": "^.*(总资产排名|资产排名|总资产榜|资产榜).*$"
  },
  "rank_top_n": {
    "description": "排行榜显示前N名",
    "type": "int",
    "default": 10
  },
  "rank_cooldown_seconds": {
    "description": "排行榜指令冷却秒数",
    "type": "int",
    "default": 30
  },
  "rank_admin_only": {
    "description": "是否仅管理员可用排行榜 (0=否, 1=是)",
    "type": "int",
    "default": 0
  }
}
